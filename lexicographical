#include<stdio.h>
#include<string.h>
int main()
{
  char s[5][50]={{"pig"},{"cat"},{"cow"},{"tiger"}};
  printf("\n initial order of the animals :\n");
  for(int i=0;i<5;i++)
  {
    printf("%s\n",s[i]);
  }
  char temp[50];
  for(int i=0;i<5;i++)
  {
    for(int j=i+1;j<5;j++)
    {
      if(strcmp(s[i],s[j])>0){
        strcpy(temp,s[i]);
        strcpy(s[i],s[j]);
        strcpy(s[j],temp);
      }
    }
  }
  printf("\n animals in the lexicographical order:\n");
  for(int i=0;i<5;i++)
  {
    printf("%s\n",s[i]);
  }
}
